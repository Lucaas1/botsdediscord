<html>
    <head>
        <%- include('./partials/head'); %>
    </head>
    <body>
        <%- include('./partials/navbar'); %>
        <div class="hero-body">
            <div class="card">
                <div class="card-content">
                  <div class="media">
                    <div class="media-left">
                      <figure class="image is-96x96">
                        <img src="<%= boti.avatar %>" class="avatar">
                      </figure>
                    </div>
                    <div class="media-content">
                      <p class="title is-4"><%= boti.name %></p>
                      <p class="subtitle is-6"><strong>Prefixo:</strong> <%= boti.prefix %></p>
                    </div>
                  </div>
                  <div class="content">
                    <%= boti.descc %>
                    <hr>
                    <div class="field has-addons">
                        <p class="control">
                          <button class="button is-success">
                            <span class="icon is-small">
                                <i class="fas fa-plus"></i>
                            </span>
                            <span>Adicionar</span>
                          </button>
                        </p>
                        <p class="control">
                          <button class="button is-link">
                            <span class="icon is-small">
                                <i class="fas fa-paper-plane"></i>
                            </span>
                            <span>Suporte</span>
                          </button>
                        </p>
                        <p class="control">
                          <button class="button is-link">
                            <span class="icon is-small">
                                <i class="fas fa-window-restore"></i>
                            </span>
                            <span>Website</span>
                          </button>
                        </p>
                      </div>
                  </div>
                </div>
              </div>
              <div class="box">
                <div class="card-body">
                    <div id="bot-description" style="white-space:pre-wrap;"><%= boti.descl %></div>
                </div>
            </div>
        </div>
        <%- include('./partials/footer'); %>
    </body>
</html>