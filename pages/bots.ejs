<html>
    <head>
        <%- include('./partials/head'); %>
    </head>
    <body>
        <%- include('./partials/navbar'); %>
        <div class="hero-body">
            <div class="box">
                <h1 class="title">
                    Bots de Discord
                </h1>
                Encontre bots Ãºnicos para seu servidor do discord, de maneira facil!
            </div>
            <div class="columns mt-5 is-multiline is-centered mt-5">
                <% bots.forEach((botc) => { %>
                <div style="width: 450px; max-width: 90vw" class="column is-6">
                    <div class="card">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src="<%= botc.avatar %>" width="48" heigth="48" class="avatar" alt="Placeholder image">
                                </figure>
                            </div>
                            <p class="title is-4"><%= botc.name %></p>
                        </div>
                        <div class="card-content">
                            <div class="content">
                                <%= botc.descc %>
                            </div>
                        </div>
                        <footer class="card-footer">
                            <a href="/bots/<%= botc.bot %>" class="card-footer-item">Ver</a>
                            <a href="/bots/<%= botc.bot %>/add" class="card-footer-item">Adicionar</a>
                            <a href="/bots/<%= botc.bot %>/vote" class="card-footer-item">Votar</a>
                        </footer>
                    </div>
                <% }); %>
            </div>
        </div>
        <%- include('./partials/footer'); %>
    </body>
</html>