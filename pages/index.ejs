                    <div class="card-content">
                        <div class="content">
                            <%= botc.descc %>
                        </div>
                    </div>
                    <footer class="card-footer">
                        <a href="#" class="card-footer-item">Ver</a>
                        <a href="#" class="card-footer-item">Adicionar</a>
                        <a href="#" class="card-footer-item">Votar</a>
                    </footer>
                </div>
            </div>
            <% }); %>
